<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             BackgroundColor="#FFFFFF"
             Title="Clientes a Visitar">
    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <!-- Encabezado -->
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2F2F2F" Offset="0"/>
                        <GradientStop Color="#2F2F2F" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="Borneo" FontSize="24" FontAttributes="Bold"
                       TextColor="#FFFFFF" VerticalOptions="Center" Margin="20,18,0,0"/>
                <HorizontalStackLayout Grid.Row="1" Spacing="15" Padding="20,0,20,10">
                    <Label Text="ðŸ“ Unidad:" TextColor="#FFFFFF" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="#FFFFFF"/>
                    <Label Text="ðŸ“… Fecha:" TextColor="#FFFFFF" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="#FFFFFF"/>
                </HorizontalStackLayout>
            </Grid>


            <!-- SelecciÃ³n cliente -->
            <Frame Margin="20,0,20,15" CornerRadius="12"
                   BackgroundColor="#F3F4F6" BorderColor="#D1D5DB"
                   HasShadow="True" Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="CLIENTE A VISITAR" TextColor="#D1D5DB" FontAttributes="Bold" FontSize="22"
                           HorizontalOptions="Center" Margin="0,0,0,15"/>

                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="previewClienteLabel" Text="" IsVisible="False"
                               TextColor="#D1D5DB" LineBreakMode="WordWrap" MaxLines="3"/>

                        <VerticalStackLayout Spacing="10">
                            <Button x:Name="btnSeleccionarCliente"
                                    Text="Seleccionar cliente"
                                    Clicked="OnSeleccionarClienteClicked"
                                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                                    CornerRadius="12" HeightRequest="56"/>
                            <Button Text="AÃ‘ADIR"
                                    Clicked="OnAÃ±adirClienteClicked"
                                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                                    CornerRadius="12" HeightRequest="56"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista clientes -->
            <Frame Margin="20,0,20,10" CornerRadius="12"
                   BackgroundColor="#F3F4F6" BorderColor="#D1D5DB"
                   HasShadow="True" Padding="0">
                <VerticalStackLayout>
                    <Label Text="CLIENTES SELECCIONADO" TextColor="#FFFFFF" FontAttributes="Bold" FontSize="22" Margin="15,10"/>
                    <BoxView HeightRequest="1" BackgroundColor="#FFFFFF"/>
                    <CollectionView ItemsSource="{Binding ClientesASurtir}" EmptyView="No hay clientes seleccionados"
                                    Margin="15,10" BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10" Padding="0,5">
                                    <Label Text="â€¢" TextColor="#FFFFFF"/>
                                    <Label Text="{Binding Cliente}" TextColor="#FFFFFF"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Button Text="INICIAR REPARTO"
                    Margin="20,0,20,20"
                    Clicked="OnRepartoClicked"
                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                    CornerRadius="12" HeightRequest="56"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
