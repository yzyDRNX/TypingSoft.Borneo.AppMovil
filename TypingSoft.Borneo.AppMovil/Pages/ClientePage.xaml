<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             BackgroundColor="White">
    <StackLayout Spacing="0">
        <!-- Header section -->
        <Grid BackgroundColor="Black" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Unidad" 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Margin="5,5,0,0"/>

            <Label Text="EE-001." 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="1"
                   Margin="5,5,0,0"/>

            <Label Text="Fecha:" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="0"
                   Margin="5,0,0,5"/>

            <Label Text="01- Octubre - 2017" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   Margin="5,0,0,5"/>
        </Grid>

        <!-- Blue title section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="INFORMACION DE RECORRIDO ORDINARIO" 
                   TextColor="White" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Empty space -->
        <BoxView HeightRequest="100" 
                 BackgroundColor="White"/>

        <!-- Cliente a visitar section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="Cliente a visitar" 
                   FontSize="16" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Entry and buttons section -->
            <CollectionView ItemsSource="{Binding ListadoClientes}"
                Margin="10"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Entry Text="{Binding Cliente}" 
                       BackgroundColor="Black"
                       TextColor="White"
                       HeightRequest="40" 
                       VerticalOptions="Center"
                       Grid.Column="0"
                       IsReadOnly="True" />

                        <Button Text="Surtir"
                        BackgroundColor="#2160AB"
                        TextColor="White"
                        HeightRequest="40"
                        WidthRequest="80"
                        FontSize="14"
                        CornerRadius="5"
                        VerticalOptions="Center"
                        Grid.Column="1"
                        Command="{Binding Source={RelativeSource}, Path=BindingContext.SurtirCommand}"
                        CommandParameter="{Binding .}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--<Button BackgroundColor="Black" 
                    Margin="2"
                    WidthRequest="40" 
                    HeightRequest="40" 
                    Text="≡" 
                    TextColor="White" 
                    FontSize="20" 
                    CornerRadius="0"
                    Grid.Column="2"/>-->


        <!-- Labels under buttons -->
        <Grid Margin="10,-5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="Preventa" 
                   FontSize="12" 
                   HorizontalOptions="Center" 
                   Grid.Column="1"/>

            <Label Text="Venta" 
                   FontSize="12" 
                   HorizontalOptions="Center" 
                   Grid.Column="2"/>
        </Grid>

        <!-- Another empty space -->
        <BoxView HeightRequest="200" 
                 BackgroundColor="White" 
                 VerticalOptions="FillAndExpand"/>

        <!-- Footer with icon placeholders -->
        <Grid BackgroundColor="Black" 
              HeightRequest="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="|||" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="0"/>

            <Label Text="○" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="1"/>

            <Label Text="≡" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="2"/>
        </Grid>
    </StackLayout>
</ContentPage>