<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             Background="{StaticResource PageBackgroundBrush}"
             Title="Clientes a Visitar">
    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">   
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Borneo"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="20,18,0,0"/>
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                    <Label Text="ðŸ“ Unidad:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="{StaticResource TextPrimaryBrush}"/>
                    <Label Text="ðŸ“… Fecha:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="{StaticResource TextPrimaryBrush}"/>
                </HorizontalStackLayout>
            </Grid>

            <Frame Padding="15" CornerRadius="12" HasShadow="True" Margin="20,10,20,10" BackgroundColor="{StaticResource Primary}">
                <Label Text="INFORMACIÃ“N DE RECORRIDO ORDINARIO" Style="{StaticResource SectionTitle}" TextColor="White"/>
            </Frame>

            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderColor="{StaticResource CardBorderBrush}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="CLIENTE A VISITAR"
                           Style="{StaticResource SectionTitle}"
                           TextColor="{StaticResource TextPrimaryBrush}"/>

                    <!-- Contenedor sustituye al Grid original -->
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="previewClienteLabel"
                               Text=""
                               IsVisible="False"
                               TextColor="{StaticResource TextPrimaryBrush}"
                               LineBreakMode="WordWrap"
                               MaxLines="3"
                               Margin="0,0,0,0"/>

                        <HorizontalStackLayout Spacing="10">
                            <Button x:Name="btnSeleccionarCliente"
                                    Text="Seleccionar cliente"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="OnSeleccionarClienteClicked"
                                    HorizontalOptions="StartAndExpand"/>

                            <Button Text="AÃ‘ADIR"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="OnAÃ±adirClienteClicked"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame Margin="20,0,20,10" CornerRadius="12" Background="{StaticResource CardBackgroundBrush}" BorderColor="{StaticResource CardBorderBrush}" HasShadow="True" Padding="0">
                <VerticalStackLayout>
                    <Label Text="CLIENTES A SURTIR" Style="{StaticResource SectionTitle}" Margin="15,10"/>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource CardBorderBrush}"/>
                    <CollectionView ItemsSource="{Binding ClientesASurtir}" EmptyView="No hay clientes seleccionados" Margin="15,10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10" Padding="0,5">
                                    <Label Text="â€¢" TextColor="{StaticResource TextPrimaryBrush}"/>
                                    <Label Text="{Binding Cliente}" TextColor="{StaticResource TextPrimaryBrush}" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Button Text="REPARTO" Style="{StaticResource PrimaryButton}" Margin="20,0,20,20" Clicked="OnRepartoClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>