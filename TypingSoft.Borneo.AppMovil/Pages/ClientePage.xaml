<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             BackgroundColor="White">
    <StackLayout Spacing="0">
        <!-- Header section -->
        <Grid BackgroundColor="Black" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Unidad" 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Margin="5,5,0,0"/>

            <Label Text="EE-001." 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="1"
                   Margin="5,5,0,0"/>

            <Label Text="Fecha:" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="0"
                   Margin="5,0,0,5"/>

            <Label Text="01- Octubre - 2017" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   Margin="5,0,0,5"/>
        </Grid>

        <!-- Blue title section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="INFORMACION DE RECORRIDO ORDINARIO" 
                   TextColor="White" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Empty space -->
        <BoxView HeightRequest="100" 
                 BackgroundColor="White"/>

        <!-- Cliente a visitar section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="Cliente a visitar" 
                   FontSize="16" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Entry and buttons section -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Picker x:Name="clientesPicker"
        ItemsSource="{Binding ListadoClientes}"
        ItemDisplayBinding="{Binding Cliente}"
        BackgroundColor="Black"
        TextColor="White"
        HeightRequest="40"
        VerticalOptions="Center"
        Grid.Column="0"/>


            <Button Text="Añadir"
            BackgroundColor="#2160AB"
            TextColor="White"
            HeightRequest="40"
            Padding="15,0"
            CornerRadius="0"
            Grid.Column="1"
            Clicked="OnAñadirClienteClicked"/>
        </Grid>


        <Frame BackgroundColor="#E3EFFF" Padding="10" HasShadow="False" CornerRadius="0" Margin="0,10,0,0">
            <StackLayout>
                <Label Text="Clientes a Surtir:" FontAttributes="Bold" FontSize="14"/>
                <CollectionView ItemsSource="{Binding ClientesASurtir}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Cliente}" FontSize="13" TextColor="Black"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Frame>

        <Button Text="Reparto"
        BackgroundColor="#2D9CDB"
        TextColor="White"
        HeightRequest="40"
        Padding="15,0"
        CornerRadius="0"
        Grid.Column="2"
        Clicked="OnRepartoClicked"/>


        <!-- Labels under buttons -->
        <Grid Margin="10,-5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="Preventa" 
                   FontSize="12" 
                   HorizontalOptions="Center" 
                   Grid.Column="1"/>

            <Label Text="Venta" 
                   FontSize="12" 
                   HorizontalOptions="Center" 
                   Grid.Column="2"/>
        </Grid>

        <!-- Another empty space -->
        <BoxView HeightRequest="200" 
                 BackgroundColor="White" 
                 VerticalOptions="FillAndExpand"/>

        <!-- Footer with icon placeholders -->
        <Grid BackgroundColor="Black" 
              HeightRequest="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="|||" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="0"/>

            <Label Text="○" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="1"/>

            <Label Text="≡" 
                   TextColor="White" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Grid.Column="2"/>
        </Grid>
    </StackLayout>
</ContentPage>