<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             BackgroundColor="White">
    <StackLayout Spacing="0">

        <!-- Header section -->
        <Grid BackgroundColor="Black" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Unidad"
                       TextColor="White"
                       Grid.Row="0"
                       Grid.Column="0"
                       Margin="5,5,0,0"/>

            <Label Text="EE-001."
                       TextColor="White"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="5,5,0,0"/>

            <Label Text="Fecha:"
                       TextColor="White"
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="5,0,0,5"/>

            <Label Text="01‑Octubre‑2017"
                       TextColor="White"
                       Grid.Row="1"
                       Grid.Column="1"
                       Margin="5,0,0,5"/>
        </Grid>

        <!-- Blue title section -->
        <Frame BackgroundColor="Black"
                   Padding="10"
                   HasShadow="False"
                   CornerRadius="0">
            <Label Text="INFORMACION DE RECORRIDO ORDINARIO"
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
        </Frame>

        <!-- Empty space -->
        <BoxView HeightRequest="20" 
         BackgroundColor="White"/>

        <!-- Cliente a visitar section -->
        <Frame BackgroundColor="Black"
                   Padding="10"
                   HasShadow="False"
                   CornerRadius="0">
            <Label Text="Cliente a visitar"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>
        </Frame>

        <!-- Selector y botones -->
        <Grid Margin="20,10" ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Picker + Añadir -->
            <Picker 
                x:Name="clientesPicker"
                Grid.Row="0" Grid.Column="0"
                ItemsSource="{Binding ListadoClientes}"
                ItemDisplayBinding="{Binding Cliente}"
                BackgroundColor="Black"
                TextColor="White"
                HeightRequest="40"
                VerticalOptions="Center"
            />

            <Button     
                Text="Añadir"
                Grid.Row="0" Grid.Column="1"
                BackgroundColor="#2160AB"
                TextColor="White"
                HeightRequest="40"
                Padding="15,0"
                CornerRadius="0"
                Clicked="OnAñadirClienteClicked" 
            />

        </Grid>

        <Grid Margin="20,10" ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
