<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.ClientePage"
             BackgroundColor="{StaticResource Gray100}"
             Title="Clientes a Visitar">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Encabezado con gradiente -->
            <Grid HeightRequest="110">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <HorizontalStackLayout Grid.Row="0" Spacing="5" Padding="15,10">
                    <Label Text="Unidad:" Style="{StaticResource SectionTitle}" TextColor="White"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="White" FontSize="16"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="1" Spacing="5" Padding="15,0,15,10">
                    <Label Text="Fecha:" Style="{StaticResource SectionTitle}" TextColor="White"/>
                    <Label Text="{Binding FechaActual}" TextColor="White" FontSize="16"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Título principal con sombra -->
            <!-- Título principal con sombra -->
            <Frame Padding="15"
       CornerRadius="12"
       HasShadow="True"
       Margin="20,10,20,10"
       BackgroundColor="{StaticResource Primary}">
                <Label Text="INFORMACIÓN DE RECORRIDO ORDINARIO"
           Style="{StaticResource SectionTitle}"
           TextColor="White"
           FontSize="20"/>
            </Frame>

            <!-- Sección de selección de clientes -->
            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="CLIENTE A VISITAR"
                           Style="{StaticResource SectionTitle}"
                           FontSize="18"
                           TextColor="{StaticResource Primary}"/>

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Picker
                            x:Name="clientesPicker"
                            ItemsSource="{Binding ListadoClientes}"
                            ItemDisplayBinding="{Binding Cliente}"
                            Title="Seleccione un cliente"
                            Style="{StaticResource Picker}"
                            HeightRequest="50"/>
                        <Button Text="AÑADIR"
                                Style="{StaticResource PrimaryButton}"
                                Grid.Column="1"
                                Clicked="OnAñadirClienteClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de clientes seleccionados -->
            <Frame Margin="20,0,20,10"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="0">
                <VerticalStackLayout>
                    <Label Text="CLIENTES A SURTIR"
                           Style="{StaticResource SectionTitle}"
                           Margin="15,10"
                           FontSize="18"/>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray100}"/>
                    <CollectionView ItemsSource="{Binding ClientesASurtir}"
                                    EmptyView="No hay clientes seleccionados"
                                    Margin="15,10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10" Padding="0,5">
                                    <Label Text="•" TextColor="{StaticResource Primary}" FontSize="18"/>
                                    <Label Text="{Binding Cliente}" FontSize="16" TextColor="{StaticResource Black}" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Botón de acción principal -->
            <Button Text="REPARTO"
                    Style="{StaticResource SecondaryButton}"
                    Margin="20,0,20,20"
                    Clicked="OnRepartoClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>