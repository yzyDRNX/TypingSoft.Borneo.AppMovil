<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.RepartoPage"
             BackgroundColor="{StaticResource Gray100}"
             Title="Reparto">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Encabezado con gradiente corporativo -->
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- "Borneo" alineado a la izquierda -->
                <Label Grid.Row="0" Grid.Column="0"
Text="Borneo"
FontSize="22"
FontAttributes="Bold"
TextColor="White"
VerticalOptions="Center"
Margin="20,18,0,0"/>
                <!-- Layout inferior igual que antes -->
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                    <Label Text="📍 Unidad:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="#E0E0E0" FontSize="15"/>
                    <Label Text="📅 Fecha:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="#E0E0E0" FontSize="15"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Título principal con sombra -->
            <Frame Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   Margin="20,10,20,10"
                   BackgroundColor="{StaticResource Primary}">
                <Label Text="INFORMACIÓN DE VENTA"
                       Style="{StaticResource SectionTitle}"
                       TextColor="White"
                       FontSize="20"/>
            </Frame>

            <!-- Sección de productos -->
            <Frame Margin="20,0,20,15"
       CornerRadius="12"
       BackgroundColor="White"
       BorderColor="{StaticResource Gray200}"
       HasShadow="True"
       Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="PRODUCTOS PARA ENTREGA"
               Style="{StaticResource SectionTitle}"
               FontSize="18"
               TextColor="{StaticResource Primary}"/>

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Seleccione un producto"
       FontSize="16"
       TextColor="{StaticResource Black}" />
                            <Picker x:Name="productosPicker"
ItemsSource="{Binding ListadoPreciosLocal}"
ItemDisplayBinding="{Binding Producto}"
Title="Seleccione un producto"
TitleColor="Black"
Style="{StaticResource Picker}"
HeightRequest="50"
Grid.Column="0"/>
                        </VerticalStackLayout>
                        

                    </Grid>
                    <Label Text="Cantidad del producto"
FontSize="16"
TextColor="{StaticResource Black}" />
                    <Entry x:Name="cantidadEntry"
                   Placeholder="Cantidad"
                   Keyboard="Numeric"
                   Style="{StaticResource Entry}"
                   HeightRequest="50"
                   Grid.Column="1"/>
                    <Button Text="AÑADIR"
                    Style="{StaticResource PrimaryButton}"
                    Grid.Column="2"
                    Clicked="OnAñadirProductoClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de productos seleccionados -->
            <Frame Margin="20,0,20,10"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="0">
                <VerticalStackLayout>
                    <Label Text="PRODUCTOS SELECCIONADOS"
                           Style="{StaticResource SectionTitle}"
                           Margin="15,10"
                           FontSize="18"/>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray100}"/>
                    <StackLayout x:Name="productosSeleccionadosStack"
                                 Spacing="5"
                                 Margin="15,10">
                        <HorizontalStackLayout Spacing="10" Padding="0,5">
                            <Label Text="•" TextColor="{StaticResource Primary}" FontSize="18"/>
                            <Label Text="{Binding Producto}" FontSize="16" TextColor="{StaticResource Black}"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botón de concluir -->
            <Button Text="CONCLUIR"
                    Style="{StaticResource PrimaryButton}"
                    Margin="20,0,20,20"
                    Clicked="OnConcluirClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>