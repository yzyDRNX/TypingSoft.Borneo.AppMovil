<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.UtileriasPage"
             Background="{StaticResource PageBackgroundBrush}"
             Title="Utilerías">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Borneo"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="20,18,0,0"/>
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                    <Label Text="📍 Unidad:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="#E0E0E0"/>
                    <Label Text="📅 Fecha:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="#E0E0E0"/>
                </HorizontalStackLayout>
            </Grid>

            <Frame Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   Margin="20,10,20,10"
                   BackgroundColor="{StaticResource Primary}">
                <Label Text="INFORMACIÓN DE VENTA"
                       Style="{StaticResource SectionTitle}"
                       TextColor="White"/>
            </Frame>

            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderColor="{StaticResource CardBorderBrush}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="DETALLES DE LA VENTA"
                           Style="{StaticResource SectionTitle}"
                           TextColor="{StaticResource Primary}"/>

                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Cliente:" FontAttributes="Bold" TextColor="{StaticResource TextPrimaryBrush}"/>
                            <Label Text="{Binding NombreCliente}" TextColor="{StaticResource TextPrimaryBrush}"/>
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray200}" Margin="0,5"/>

                        <Label Text="Productos:" FontAttributes="Bold" TextColor="{StaticResource TextPrimaryBrush}"/>

                        <CollectionView ItemsSource="{Binding Productos}" BackgroundColor="Transparent">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Nombre}" Grid.Column="0" TextColor="{StaticResource TextPrimaryBrush}"/>
                                        <Label Text="{Binding Cantidad, StringFormat='x {0}'}" Grid.Column="1" TextColor="{StaticResource TextPrimaryBrush}"/>
                                        <Label Text="{Binding Precio, StringFormat='${0:F2}'}" Grid.Column="2" TextColor="{StaticResource TextPrimaryBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray200}" Margin="0,5"/>

                        <HorizontalStackLayout Spacing="5" HorizontalOptions="End">
                            <Label Text="Total:" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                            <Label Text="{Binding Total, StringFormat='${0:F2}'}" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="UtileriasFrame"
                   Margin="20,0,20,15"
                   CornerRadius="12"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderColor="{StaticResource CardBorderBrush}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="20">
                    <Label Text="UTILERÍAS" Style="{StaticResource SectionTitle}" TextColor="{StaticResource Primary}"/>

                    <Label Text="Impresora Seleccionada: " TextColor="{StaticResource TextPrimaryBrush}"/>

                    <Picker x:Name="impresorasPicker"
                            Title="Selecciona impresora"
                            TitleColor="#B0B0B0"
                            ItemsSource="{Binding ImpresorasBluetooth}"
                            SelectedItem="{Binding ImpresoraSeleccionada, Mode=TwoWay}"
                            Margin="0,0,0,10"
                            HeightRequest="56"
                            TextColor="White"
                            Background="{StaticResource CardBackgroundBrush}"/>

                    <Grid ColumnSpacing="20" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Button Text="🖨️" Style="{StaticResource PrimaryButton}" HeightRequest="60" WidthRequest="60" HorizontalOptions="Center" Clicked="Impresion"/>
                            <Label Text="Imprimir comprobante" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{StaticResource TextPrimaryBrush}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="+" Style="{StaticResource PrimaryButton}" HeightRequest="60" WidthRequest="60" HorizontalOptions="Center" Clicked="OtraVentaMismoCliente"/>
                            <Label Text="Otra venta Mismo Cliente" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{StaticResource TextPrimaryBrush}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Button Text="▶▶" Style="{StaticResource PrimaryButton}" HeightRequest="60" WidthRequest="60" HorizontalOptions="Center" Clicked="SiguienteEntrega"/>
                            <Label Text="Siguiente Entrega" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{StaticResource TextPrimaryBrush}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <BoxView HeightRequest="50" BackgroundColor="Transparent"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>