<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.UtileriasPage"
             BackgroundColor="White">
    <StackLayout Spacing="0">
        <!-- Header section -->
        <Grid BackgroundColor="Black" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Unidad" 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Margin="5,5,0,0"/>

            <Label Text="EE-001." 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="1"
                   Margin="5,5,0,0"/>

            <Label Text="Fecha" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="0"
                   Margin="5,0,0,5"/>

            <Label Text="01- Octubre - 2017" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   Margin="5,0,0,5"/>
        </Grid>

        <!-- Blue title section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="INFORMACION DE VENTA" 
                   TextColor="White" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Empty space -->
        <BoxView HeightRequest="100" 
                 BackgroundColor="White"/>

        <!-- Utilerias section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="Utilerias" 
                   FontSize="16" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Buttons section -->
        <Grid Margin="20" ColumnSpacing="20" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Imprimir button -->
            <Button
    Grid.Column="0"
    HeightRequest="60"
    WidthRequest="60"
    BackgroundColor="Black"
    CornerRadius="0"
    Padding="0"
    HorizontalOptions="Center"
    Text="🖨️"
    TextColor="White"
    FontSize="30"
    Clicked="Impresion" />

            <Label Text="Imprimir comprobante" 
                   Grid.Column="0" 
                   Grid.Row="1" 
                   FontSize="10" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,0"/>

            <!-- Otra venta button -->
            <Frame BackgroundColor="Black" 
                   Grid.Column="1" 
                   Padding="0" 
                   HeightRequest="60" 
                   WidthRequest="60" 
                   HorizontalOptions="Center"
                   CornerRadius="0">
                <Label Text="+" 
                       TextColor="White" 
                       FontSize="40" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>
            <Label Text="Otra venta Mismo Cliente" 
                   Grid.Column="1" 
                   Grid.Row="1" 
                   FontSize="10" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,0"/>

            <!-- Siguiente button -->
            <Frame BackgroundColor="Black" 
                   Grid.Column="2" 
                   Padding="0" 
                   HeightRequest="60" 
                   WidthRequest="60" 
                   HorizontalOptions="Center"
                   CornerRadius="0">
                <Label Text="▶▶" 
                       TextColor="White" 
                       FontSize="30" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>
            <Label Text="Siguiente Entrega" 
                   Grid.Column="2" 
                   Grid.Row="1" 
                   FontSize="10" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,0"/>
        </Grid>

        <!-- Remaining empty space -->
        <BoxView HeightRequest="200" 
                 BackgroundColor="White" 
                 VerticalOptions="FillAndExpand"/>

        <!-- Footer -->
        <BoxView BackgroundColor="Black" 
                 HeightRequest="50"/>
    </StackLayout>
</ContentPage>