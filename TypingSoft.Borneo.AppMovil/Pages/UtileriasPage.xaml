<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.UtileriasPage"
             BackgroundColor="{StaticResource Gray100}"
             Title="UtilerÃ­as">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Encabezado con gradiente corporativo -->
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- "Borneo" alineado a la izquierda -->
                <Label Grid.Row="0" Grid.Column="0"
Text="Borneo"
FontSize="22"
FontAttributes="Bold"
TextColor="White"
VerticalOptions="Center"
Margin="20,18,0,0"/>
                <!-- Layout inferior igual que antes -->
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                    <Label Text="ðŸ“ Unidad:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="#E0E0E0" FontSize="15"/>
                    <Label Text="ðŸ“… Fecha:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="#E0E0E0" FontSize="15"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- TÃ­tulo principal con sombra -->
            <Frame Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   Margin="20,10,20,10"
                   BackgroundColor="{StaticResource Primary}">
                <Label Text="INFORMACIÃ“N DE VENTA"
                       Style="{StaticResource SectionTitle}"
                       TextColor="White"
                       FontSize="20"/>
            </Frame>

            <!-- SecciÃ³n de informaciÃ³n de venta -->
            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="DETALLES DE LA VENTA"
                           Style="{StaticResource SectionTitle}"
                           FontSize="18"
                           TextColor="{StaticResource Primary}"/>

                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Cliente:"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Black}"
                                   FontSize="14"/>
                            <Label Text="{Binding NombreCliente}" TextColor="{StaticResource Black}" FontSize="14"/>
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray200}" Margin="0,5"/>

                        <Label Text="Productos:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Black}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding Productos}"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Nombre}"
                                               Grid.Column="0"
                                               TextColor="{StaticResource Black}"
                                               FontSize="13"/>
                                        <Label Text="{Binding Cantidad, StringFormat='x {0}'}"
                                               Grid.Column="1"
                                               TextColor="{StaticResource Black}"
                                               FontSize="13"/>
                                        <Label Text="{Binding Precio, StringFormat='${0:F2}'}"
                                               Grid.Column="2"
                                               TextColor="{StaticResource Black}"
                                               FontSize="13"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray200}" Margin="0,5"/>

                        <HorizontalStackLayout Spacing="5" HorizontalOptions="End">
                            <Label Text="Total:"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="16"/>
                            <Label Text="{Binding Total, StringFormat='${0:F2}'}"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="16"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- SecciÃ³n de UtilerÃ­as -->
            <Frame x:Name="UtileriasFrame"
                   Margin="20,0,20,15"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="20">
                    <Label Text="UTILERÃAS"
                           Style="{StaticResource SectionTitle}"
                           FontSize="18"
                           TextColor="{StaticResource Primary}"/>

                    <Label Text="Impresora Seleccionada: "
       Style="{StaticResource SectionTitle}"
       FontSize="14"
       TextColor="Black"/>
                    <!-- Picker para impresoras Bluetooth -->
                    <Picker x:Name="impresorasPicker"
                            Title="Selecciona impresora"
                            TitleColor="Black"
                            ItemsSource="{Binding ImpresorasBluetooth}"
                            SelectedItem="{Binding ImpresoraSeleccionada, Mode=TwoWay}"
                            Margin="0,0,0,10"
                            HeightRequest="50"
                            TextColor="Black"/>


                    <!-- Grid de botones de utilerÃ­as (lo que ya tienes) -->
                    <Grid ColumnSpacing="20" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- BotÃ³n Imprimir -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Button Text="ðŸ–¨ï¸"
                                    Style="{StaticResource PrimaryButton}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Clicked="Impresion"/>
                            <Label Text="Imprimir comprobante"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Black}"/>
                        </VerticalStackLayout>

                        <!-- BotÃ³n Otra venta -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="+"
                                    Style="{StaticResource PrimaryButton}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    FontSize="40"
                                    HorizontalOptions="Center"
                                    Clicked="OtraVentaMismoCliente"/>
                            <Label Text="Otra venta Mismo Cliente"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Black}"/>
                        </VerticalStackLayout>

                        <!-- BotÃ³n Siguiente -->
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Button Text="â–¶â–¶"
                                    Style="{StaticResource PrimaryButton}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Clicked="SiguienteEntrega"/>
                            <Label Text="Siguiente Entrega"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Black}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Espaciado inferior -->
            <BoxView HeightRequest="50" BackgroundColor="Transparent"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>