<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.Modals.SelectProductoModal"
             Title="Seleccionar producto"
             Background="{StaticResource PageBackgroundBrush}">
    <Grid Padding="20" RowSpacing="12" RowDefinitions="Auto,*,Auto">
        <SearchBar Grid.Row="0"
                   x:Name="searchBar"
                   Placeholder="Buscar producto..."
                   TextChanged="OnSearchTextChanged"/>
        <CollectionView Grid.Row="1"
                        x:Name="itemsView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        ItemsLayout="VerticalList"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Producto}" TextColor="#2F2F2F" />
                        <Label Grid.Column="1" Text="{Binding Precio}" TextColor="#2F2F2F" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="2"
                Text="Cancelar"
                Clicked="OnCancel"
                Style="{StaticResource PrimaryButton}" />
    </Grid>
</ContentPage>