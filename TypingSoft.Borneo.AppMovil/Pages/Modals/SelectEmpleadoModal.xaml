<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.Modals.SelectEmpleadoModal"
             Title="Seleccionar empleado"
             Background="{StaticResource PageBackgroundBrush}">
    <VerticalStackLayout Padding="20" Spacing="12">
        <SearchBar x:Name="searchBar" Placeholder="Buscar empleado..." TextChanged="OnSearchTextChanged"/>
        <CollectionView x:Name="itemsView" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Text="{Binding Empleado}" TextColor="{StaticResource TextPrimaryBrush}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Cancelar" Clicked="OnCancel" Style="{StaticResource PrimaryButton}" />
    </VerticalStackLayout>
</ContentPage>