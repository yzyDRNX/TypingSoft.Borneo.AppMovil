<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.InicioPage"
             Title="Configuración de URL"
             Background="{StaticResource PageBackgroundBrush}">

    <AbsoluteLayout>
        <!-- Fondo degradado corporativo -->
        <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                    <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    Padding="0,10">
            <VerticalStackLayout Spacing="0" Padding="0">

                <!-- Header moderno --> 
                <Grid HeightRequest="80" Margin="0,0,0,20">
                    <BoxView Background="{StaticResource CardBackgroundBrush}"/>
                    <BoxView Background="{StaticResource CardBackgroundBrush}" HeightRequest="30" VerticalOptions="End"/>
                    <BoxView BackgroundColor="{StaticResource Primary}" HeightRequest="30" VerticalOptions="End"/>
                    <Label Text="Configuración de URL"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Contenido principal con animación -->
                <VerticalStackLayout x:Name="MainContentStack" Spacing="30" Padding="20,0" VerticalOptions="Center">

                    <!-- Tarjeta de usuario -->
                    <Frame Background="{StaticResource CardBackgroundBrush}"
                           CornerRadius="20"
                           Padding="25"
                           HasShadow="True"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10">
                        <VerticalStackLayout Spacing="15">
                            <Frame BackgroundColor="{StaticResource Secondary}"
                                   CornerRadius="100"
                                   Padding="0"
                                   HeightRequest="120"
                                   WidthRequest="120"
                                   HorizontalOptions="Center"
                                   HasShadow="False">
                                <Image Source="camera_icon.png" 
                                       HeightRequest="50"
                                       Aspect="AspectFit"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            <Label Text="Foto"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Panel de configuración -->
                    <Frame Background="{StaticResource CardBackgroundBrush}"
                           CornerRadius="20"
                           Padding="25"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="25">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="link_icon.png"
                                       HeightRequest="24"
                                       WidthRequest="24"/>
                                <Label Text="Configuración de URL"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"/>
                            </HorizontalStackLayout>

                            <!-- Campo de entrada mejorado -->
                            <Frame CornerRadius="15"
                                   Padding="0"
                                   HasShadow="False"
                                   BorderColor="{StaticResource CardBorderBrush}"
                                   Background="{StaticResource CardBackgroundBrush}"
                                   HeightRequest="55">
                                <Grid ColumnDefinitions="auto,*,auto" Padding="10,0">
                                    <Image Source="url_icon.png"
                                           Grid.Column="0"
                                           HeightRequest="20"
                                           WidthRequest="20"
                                           VerticalOptions="Center"
                                           Margin="10,0"/>
                                    <Entry x:Name="UrlEntry"
                                           Grid.Column="1"
                                           Text="{Binding UrlInput}"
                                           Style="{StaticResource Entry}"
                                           Placeholder="https://ejemplo.com"
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                    <Image Source="edit_icon.png"
                                           Grid.Column="2"
                                           HeightRequest="16"
                                           WidthRequest="16"
                                           VerticalOptions="Center"
                                           Margin="10,0"/>
                                </Grid>
                            </Frame>

                            <!-- Botón moderno con gradiente corporativo -->
                            <Button x:Name="SendUrlButton"
                                    Text="ENVIAR URL"
                                    Clicked="OnSendUrlClicked"
                                    Style="{StaticResource PrimaryButton}"
                                    CornerRadius="12"
                                    Padding="15,12"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HeightRequest="50"
                                    Margin="0,10">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>

                            <!-- Indicador de estado -->
                            <Label x:Name="StatusLabel"
                                   Text=""
                                   FontSize="14"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   IsVisible="False"
                                   Margin="0,5"/>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Modal de carga mejorado -->
        <AbsoluteLayout x:Name="LoadingOverlay"
                        IsVisible="False"
                        BackgroundColor="#80000000"
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Frame Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="25"
                   Padding="40"
                   HasShadow="True"
                   WidthRequest="250"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                   AbsoluteLayout.LayoutFlags="PositionProportional">
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       Color="{StaticResource Primary}"
                                       WidthRequest="50"
                                       HeightRequest="50"/>
                    <Label x:Name="LoadingLabel"
                           Text="Enviando URL..."
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"/>
                    <ProgressBar Progress="0.5" 
                                 ProgressColor="{StaticResource Primary}"
                                 BackgroundColor="{StaticResource Secondary}"
                                 HeightRequest="6"
                                 WidthRequest="180"/>
                </VerticalStackLayout>
            </Frame>
        </AbsoluteLayout>
    </AbsoluteLayout>
</ContentPage>