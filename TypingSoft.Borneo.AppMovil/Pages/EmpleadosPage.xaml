<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.EmpleadosPage"
             BackgroundColor="White">
    <StackLayout Spacing="0">
        <!-- Header section -->
        <Grid BackgroundColor="Black" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Unidad." 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Margin="5,5,0,0"/>

            <Label Text="EE-001." 
                   TextColor="White" 
                   Grid.Row="0" 
                   Grid.Column="1"
                   Margin="5,5,0,0"/>

            <Label Text="Fecha." 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="0"
                   Margin="5,0,0,5"/>

            <Label Text="01- Octubre - 2017" 
                   TextColor="White" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   Margin="5,0,0,5"/>
        </Grid>

        <!-- Blue title section -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="SELECCIÓN DE EMPLEADOS" 
                   TextColor="White" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Small space -->
        <BoxView HeightRequest="20" 
                 BackgroundColor="White"/>

        <!-- Empleados section title -->
        <Frame BackgroundColor="Black" 
               Padding="10" 
               HasShadow="False" 
               CornerRadius="0">
            <Label Text="Empleados para Ruta" 
                   FontSize="16" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Select and button section -->
        <Grid Margin="20,10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Picker x:Name="empleadosPicker" 
                    BackgroundColor="Black"
                    TextColor="White"
                    SelectedIndex="0"
                    HeightRequest="40" 
                    VerticalOptions="Center" 
                    Grid.Column="0"/>

            <Button Text="Añadir" 
                    BackgroundColor="#2160AB" 
                    TextColor="White" 
                    HeightRequest="40" 
                    Padding="15,0" 
                    CornerRadius="0"
                    Grid.Column="1"
                    Clicked="OnAddEmployeeClicked"/>
        </Grid>

        <!-- Employees List -->
        <Frame BorderColor="#DDDDDD" 
               Margin="20,0,20,10" 
               Padding="10" 
               CornerRadius="0">
            <StackLayout x:Name="empleadosSeleccionadosStack" 
                         Spacing="5">
                <Label Text="Empleados seleccionados:" 
                       FontAttributes="Bold" 
                       Margin="0,0,0,5"/>
                <!-- Los empleados seleccionados se añadirán aquí dinámicamente -->
            </StackLayout>
        </Frame>

        <!-- Start Route Button -->
        <Button Text="Empezar Ruta" 
                BackgroundColor="Black"       
                TextColor="White" 
                Margin="20,20,20,0" 
                HeightRequest="50" 
                CornerRadius="0"
                Clicked="OnStartRouteClicked"/>

        <!-- Remaining empty space -->
        <BoxView HeightRequest="20" 
                 BackgroundColor="White" 
                 VerticalOptions="FillAndExpand"/>


    </StackLayout>
</ContentPage>