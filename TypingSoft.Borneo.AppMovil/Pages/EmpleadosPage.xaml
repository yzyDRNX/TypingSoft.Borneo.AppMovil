<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.EmpleadosPage"
             BackgroundColor="#FFFFFF"
             Title="Selección de Empleados">
    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <!-- Encabezado -->
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2F2F2F" Offset="0"/>
                        <GradientStop Color="#2F2F2F" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="Borneo" FontSize="24" FontAttributes="Bold"
                       TextColor="#FFFFFF" VerticalOptions="Center" Margin="20,18,0,0"/>
                <HorizontalStackLayout Grid.Row="1" Spacing="15" Padding="20,0,20,10">
                    <Label Text="📍 Unidad:" TextColor="#FFFFFF" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="#FFFFFF"/>
                    <Label Text="📅 Fecha:" TextColor="#FFFFFF" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="#FFFFFF"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Título -->
            <Frame Padding="15" CornerRadius="12" HasShadow="True" Margin="20,10,20,10"
                   BackgroundColor="#F3F4F6" BorderColor="#D1D5DB">
                <Label Text="SELECCIÓN DE VENDEDOR(ES)" TextColor="#FFFFFF"
                       FontAttributes="Bold" FontSize="22" HorizontalOptions="Center"/>
            </Frame>

            <!-- Selección -->
            <Frame Margin="20,0,20,15" CornerRadius="12"
                   BackgroundColor="#F3F4F6" BorderColor="#D1D5DB"
                   HasShadow="True" Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="VENDEDOR(ES) PARA RUTA" TextColor="#FFFFFF"
                           FontAttributes="Bold" FontSize="22" HorizontalOptions="Center" Margin="0,0,0,15"/>

                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="previewEmpleadoLabel" Text="" IsVisible="False"
                               TextColor="#FFFFFF" LineBreakMode="WordWrap" MaxLines="3"/>

                        <VerticalStackLayout Spacing="10">
                            <Button x:Name="btnSeleccionarEmpleado"
                                    Text="Seleccionar empleado"
                                    Clicked="OnSeleccionarEmpleadoClicked"
                                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                                    CornerRadius="12" HeightRequest="56"/>
                            <Button Text="AÑADIR"
                                    Clicked="OnAñadirEmpleadoClicked"
                                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                                    CornerRadius="12" HeightRequest="56"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista -->
            <Frame Margin="20,0,20,10" CornerRadius="12"
                   BackgroundColor="#F3F4F6" BorderColor="#D1D5DB"
                   HasShadow="True" Padding="0">
                <VerticalStackLayout>
                    <Label Text="VENEDOR(ES) SELECCIONADO(S)" TextColor="#FFFFFF"
                           FontAttributes="Bold" FontSize="22" Margin="15,10"/>
                    <BoxView HeightRequest="1" BackgroundColor="#D1D5DB"/>
                    <StackLayout x:Name="empleadosSeleccionadosStack" Spacing="10" Padding="15,10"/>
                    <Label Text="No hay empleados seleccionados" x:Name="emptyStateLabel"
                           TextColor="#FFFFFF" HorizontalOptions="Center" Margin="0,20" IsVisible="True"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="INICIAR RECORRIDO"
                    Margin="20,0,20,10"
                    Clicked="OnEmpezarRutaClicked"
                    BackgroundColor="#2F2F2F" TextColor="#FFFFFF"
                    CornerRadius="12" HeightRequest="56"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
