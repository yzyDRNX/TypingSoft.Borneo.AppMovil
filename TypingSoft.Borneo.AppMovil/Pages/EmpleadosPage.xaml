<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.EmpleadosPage"
             Background="{StaticResource PageBackgroundBrush}"
             Title="Selección de Empleados">
    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <Grid HeightRequest="120">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Borneo" FontSize="24" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" Margin="20,18,0,0"/>
                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                    <Label Text="📍 Unidad:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="{StaticResource TextPrimaryBrush}"/>
                    <Label Text="📅 Fecha:" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding FechaActual}" TextColor="{StaticResource TextPrimaryBrush}"/>
                </HorizontalStackLayout>
            </Grid>

            <Frame Padding="15" CornerRadius="12" HasShadow="True" Margin="20,10,20,10" BackgroundColor="{StaticResource Primary}">
                <Label Text="SELECCIÓN DE EMPLEADOS" Style="{StaticResource SectionTitle}" TextColor="White"/>
            </Frame>

            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderColor="{StaticResource CardBorderBrush}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="EMPLEADOS PARA RUTA"
                           Style="{StaticResource SectionTitle}"
                           TextColor="{StaticResource TextPrimaryBrush}"/>

                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="previewEmpleadoLabel"
                               Text=""
                               IsVisible="False"
                               TextColor="{StaticResource TextPrimaryBrush}"
                               LineBreakMode="WordWrap"
                               MaxLines="3"
                               Margin="0,0,0,0"/>

                        <VerticalStackLayout Spacing="10">
                            <Button x:Name="btnSeleccionarEmpleado"
                                    Text="Seleccionar empleado"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="OnSeleccionarEmpleadoClicked"
                                    VerticalOptions="StartAndExpand"/>

                            <Button Text="AÑADIR"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="OnAñadirEmpleadoClicked"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame Margin="20,0,20,10" CornerRadius="12" Background="{StaticResource CardBackgroundBrush}" BorderColor="{StaticResource CardBorderBrush}" HasShadow="True" Padding="0">
                <VerticalStackLayout>
                    <Label Text="EMPLEADOS SELECCIONADOS" Style="{StaticResource SectionTitle}" Margin="15,10"/>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource CardBorderBrush}"/>
                    <StackLayout x:Name="empleadosSeleccionadosStack" Spacing="10" Padding="15,10">
                        <HorizontalStackLayout Spacing="10" Padding="0,5">
                            <Label Text="•" TextColor="{StaticResource TextPrimaryBrush}"/>
                            <Label Text="{Binding Empleado}" TextColor="{StaticResource TextPrimaryBrush}"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                    <Label Text="No hay empleados seleccionados" x:Name="emptyStateLabel" TextColor="{StaticResource TextPrimaryBrush}" HorizontalOptions="Center" Margin="0,20" IsVisible="True"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="EMPEZAR RUTA"
                    Style="{StaticResource PrimaryButton}"
                    Margin="20,0,20,10"
                    Clicked="OnEmpezarRutaClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>