<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.EmpleadosPage"
             BackgroundColor="{StaticResource Gray100}"
             Title="Selección de Empleados">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Encabezado con gradiente corporativo -->
            <Grid HeightRequest="110">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                        <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <HorizontalStackLayout Grid.Row="0" Spacing="5" Padding="15,10">
                    <Label Text="Unidad:" Style="{StaticResource SectionTitle}" TextColor="White"/>
                    <Label Text="{Binding DescripcionRuta}" TextColor="White" FontSize="16"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="1" Spacing="5" Padding="15,0,15,10">
                    <Label Text="Fecha:" Style="{StaticResource SectionTitle}" TextColor="White"/>
                    <Label Text="{Binding FechaActual}" TextColor="White" FontSize="16"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Título principal con sombra -->
            <Frame Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   Margin="20,-30,20,10"
                   BackgroundColor="{StaticResource Primary}">
                <Label Text="SELECCIÓN DE EMPLEADOS"
                       Style="{StaticResource SectionTitle}"
                       TextColor="White"
                       FontSize="20"/>
            </Frame>

            <!-- Sección de selección de empleados -->
            <Frame Margin="20,0,20,15"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="18">
                    <Label Text="EMPLEADOS PARA RUTA"
                           Style="{StaticResource SectionTitle}"
                           FontSize="18"
                           TextColor="{StaticResource Primary}"/>

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Picker x:Name="empleadosPicker"
                                ItemsSource="{Binding ListaEmpleados}"
                                ItemDisplayBinding="{Binding Empleado}"
                                Title="Seleccione un empleado"
                                Style="{StaticResource Picker}"
                                HeightRequest="50"/>
                        <Button Text="AÑADIR"
                                Style="{StaticResource PrimaryButton}"
                                Grid.Column="1"
                                Clicked="OnAñadirEmpleadoClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de empleados seleccionados -->
            <Frame Margin="20,0,20,10"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="{StaticResource Gray200}"
                   HasShadow="True"
                   Padding="0">
                <VerticalStackLayout>
                    <Label Text="EMPLEADOS SELECCIONADOS"
                           Style="{StaticResource SectionTitle}"
                           Margin="15,10"
                           FontSize="18"/>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray100}"/>
                    <StackLayout x:Name="empleadosSeleccionadosStack"
                                 Spacing="10"
                                 Padding="15,10"/>
                    <Label Text="No hay empleados seleccionados"
                           x:Name="emptyStateLabel"
                           TextColor="{StaticResource Gray400}"
                           HorizontalOptions="Center"
                           Margin="0,20"
                           IsVisible="True"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Botón de acción principal -->
            <Button Text="EMPEZAR RUTA"
                    Style="{StaticResource SecondaryButton}"
                    Margin="20,0,20,10"
                    Clicked="OnEmpezarRutaClicked"/>

            <Button Text="VOLVER AL MENÚ"
                    Style="{StaticResource SecondaryButton}"
                    Margin="20,0,20,20"
                    Command="{Binding VolverMenuCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>