<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.LoginPage"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             BackgroundColor="White"
             Appearing="OnPageAppearing">

    <AbsoluteLayout>

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">

            <StackLayout Spacing="0">

                <!-- Header -->
                <BoxView BackgroundColor="#0A84FF" HeightRequest="60"/>

                <!-- Main content -->
                <StackLayout Padding="20" Spacing="25">

                    <StackLayout x:Name="MainLayout"
                                 HorizontalOptions="Center"
                                 Spacing="20"
                                 Opacity="0"
                                 Scale="0.8">

                        <!-- User icon -->
                        <Frame BackgroundColor="#1E1E1E"
                               WidthRequest="80"
                               HeightRequest="80"
                               Padding="0"
                               CornerRadius="40"
                               HasShadow="True"
                               HorizontalOptions="Center"
                               Margin="0,10">
                            <Label Text=""
                                   TextColor="White"
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Login label -->
                        <Label Text="Iniciar sesi贸n"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10"/>

                    </StackLayout>

                    <!-- Secci贸n QR -->
                    <StackLayout Spacing="15">

                        <!-- Bot贸n QR -->
                        <Button Text="Escanear c贸digo QR"
                                Clicked="OnLoginButtonClicked"
                                BackgroundColor="#0A84FF"
                                TextColor="White"
                                CornerRadius="12"
                                Padding="15,12"
                                FontSize="16"
                                FontAttributes="Bold"/>

                        <!-- C谩mara QR -->
                        <Frame CornerRadius="15"
                               Padding="0"
                               HasShadow="True"
                               BackgroundColor="Black"
                               HorizontalOptions="Center"
                               Margin="0,10">
                            <zxing:CameraBarcodeReaderView
                                x:Name="cameraBarcodeReaderView"
                                IsVisible="True"
                                BarcodesDetected="BarcodesDetected"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                BackgroundColor="Black"
                                HeightRequest="280"
                                WidthRequest="220"/>
                        </Frame>

                    </StackLayout>

                    <!-- Separador visual -->
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="FillAndExpand"
                                 Margin="0,15">
                        <BoxView BackgroundColor="#CCCCCC" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="Center"/>
                        <Label Text="O" 
                               TextColor="Gray" 
                               FontSize="14"
                               Margin="15,0"
                               VerticalOptions="Center"/>
                        <BoxView BackgroundColor="#CCCCCC" 
                                 HeightRequest="1" 
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="Center"/>
                    </StackLayout>

                    <!-- Secci贸n entrada manual -->
                    <StackLayout Spacing="15">

                        <Label Text="Entrada manual"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"/>

                        <!-- Entrada manual -->
                        <Frame CornerRadius="12"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#CCCCCC"
                               BackgroundColor="#F8F8F8"
                               HeightRequest="50"
                               Margin="0,5">
                            <Entry Text="{Binding Ruta}"
                                   BackgroundColor="Transparent"
                                   Placeholder="Introducir Ruta"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   Margin="15,0"
                                   FontSize="16"
                                   HeightRequest="50"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Bot贸n iniciar con ruta -->
                        <Button Text="Iniciar con Ruta"
                                Clicked="OnManualLoginClicked"
                                BackgroundColor="#0A84FF"
                                TextColor="White"
                                CornerRadius="12"
                                Padding="15,12"
                                FontSize="16"
                                FontAttributes="Bold"/>

                    </StackLayout>

                    <!-- Espacio adicional para el scroll -->
                    <BoxView HeightRequest="30" BackgroundColor="Transparent"/>

                </StackLayout>

                <!-- Footer -->
                <BoxView BackgroundColor="#0A84FF" HeightRequest="60"/>

            </StackLayout>
        </ScrollView>

        <!-- Modal de carga -->
        <AbsoluteLayout x:Name="LoadingOverlay"
                        IsVisible="False"
                        BackgroundColor="#80000000"
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">

            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="True"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                   AbsoluteLayout.LayoutFlags="PositionProportional">

                <StackLayout Spacing="15" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       Color="#0A84FF"
                                       WidthRequest="40"
                                       HeightRequest="40"/>
                    <Label x:Name="LoadingLabel"
                           Text="Verificando..."
                           FontSize="16"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </AbsoluteLayout>

    </AbsoluteLayout>
</ContentPage>