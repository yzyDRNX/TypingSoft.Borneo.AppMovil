<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.MenuPage"
             Background="{StaticResource PageBackgroundBrush}"
             xmlns:VM="clr-namespace:TypingSoft.Borneo.AppMovil.VModels" 
             x:DataType="VM:MenuVM"
             NavigationPage.HasNavigationBar="False">

    <AbsoluteLayout>

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Spacing="0">

                <!-- Encabezado con gradiente y sombra -->
                <Grid HeightRequest="120">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                            <GradientStop Color="{StaticResource Secondary}" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Borneo"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           Margin="20,18,0,0"/>

                    <!-- Botón modo oscuro en esquina superior derecha -->
                    <Button x:Name="ThemeToggleButton"
                            Grid.Row="0" Grid.Column="0"
                            Text="🌙"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="20"
                            Padding="8,4"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            Margin="0,18,16,0"
                            Clicked="OnToggleThemeClicked"/>

                    <!-- Layout inferior -->
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                        <Label Text="📍 Unidad:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                        <Label Text="{Binding DescripcionRuta}" TextColor="#E0E0E0" FontSize="15"/>
                        <Label Text="📅 Fecha:" TextColor="White" FontSize="15" FontAttributes="Bold"/>
                        <Label Text="{Binding FechaActual}" TextColor="#E0E0E0" FontSize="15"/>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Título principal con sombra y gradiente -->
                <Frame BackgroundColor="{StaticResource Primary}"
                       Padding="18"
                       HasShadow="True"
                       CornerRadius="14"
                       Margin="20,10,20,10">
                    <Label Text="MENÚ PRINCIPAL"
                           TextColor="White"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Contenido principal -->
                <VerticalStackLayout x:Name="MainMenuLayout" Spacing="0">
                    <!-- Espacio decorativo -->
                    <BoxView HeightRequest="10" BackgroundColor="Transparent"/>

                    <!-- Botones del menú con iconos y gradiente -->
                    <VerticalStackLayout Padding="20" Spacing="25">
                        <VerticalStackLayout x:Name="MenuButtonFrames" Spacing="18">
                            <!-- Descargar Datos -->
                            <Frame x:Name="FrameDescargarDatos" CornerRadius="14" Padding="0" HasShadow="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnDescargarDatos" Text="⬇️                      Descargar Datos                         "
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding SincronizarCatalogosCommand}"
                                        FontSize="18"
                                        HorizontalOptions="FillAndExpand"/>
                            </Frame>

                            <!-- Sincronizar Datos -->
                            <Frame x:Name="FrameSincronizarDatos" CornerRadius="14" Padding="0" HasShadow="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnSincronizarDatos" Text="🔄                      Sincronizar Datos                       "
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding SincronizarVentasCommand}"
                                        FontSize="18"
                                        HorizontalOptions="FillAndExpand"/>
                            </Frame>

                            <!-- Iniciar -->
                            <Frame x:Name="FrameIniciar" CornerRadius="14" Padding="0" HasShadow="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnIniciar" Text="💰                      Iniciar                                            "
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding NavegarInicioCommand}"
                                        FontSize="18"
                                        HorizontalOptions="FillAndExpand"/>
                            </Frame>

                            <!-- Cerrar Sesión -->
                            <Frame x:Name="FrameCerrarSesion" CornerRadius="14" Padding="0" HasShadow="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnCerrarSesion" Text="🔒                     Cerrar Sesión                               "
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding CerrarSesionCommand}"
                                        FontSize="18"
                                        HorizontalOptions="FillAndExpand"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Espacio adicional -->
                        <BoxView HeightRequest="30" BackgroundColor="Transparent"/>

                        <!-- Pie de página con versión y branding -->
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                            <Label Text="Versión 1.0.0" FontSize="13" TextColor="{StaticResource Gray500}" HorizontalOptions="Center"/>
                            <Label Text="© 2025 Borneo Soft" FontSize="13" TextColor="{StaticResource Gray500}" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Modal de carga -->
        <AbsoluteLayout x:Name="LoadingOverlay"
                        IsVisible="False"
                        BackgroundColor="#80000000"
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Frame Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="True"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                   AbsoluteLayout.LayoutFlags="PositionProportional">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" Color="{StaticResource Primary}" WidthRequest="40" HeightRequest="40"/>
                    <Label x:Name="LoadingLabel" Text="Procesando..." FontSize="16" TextColor="{StaticResource TextPrimaryBrush}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </AbsoluteLayout>
    </AbsoluteLayout>
</ContentPage>