<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.MenuPage"
             Background="{StaticResource PageBackgroundBrush}"
             xmlns:VM="clr-namespace:TypingSoft.Borneo.AppMovil.VModels" 
             x:DataType="VM:MenuVM"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Spacing="0">
                <Grid HeightRequest="120">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource Primary}" Offset="0"/>
                            <GradientStop Color="{StaticResource Gray900}" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Text="Borneo" FontSize="24" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" Margin="20,18,0,0"/>
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15" Padding="20,0,20,10">
                        <Label Text="📍 Unidad:" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="{Binding DescripcionRuta}" TextColor="#E0E0E0"/>
                        <Label Text="📅 Fecha:" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="{Binding FechaActual}" TextColor="#E0E0E0"/>
                    </HorizontalStackLayout>
                </Grid>

                <Frame BackgroundColor="{StaticResource Primary}" Padding="18" HasShadow="True" CornerRadius="14" Margin="20,10,20,10">
                    <Label Text="MENÚ PRINCIPAL" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Frame>

                <VerticalStackLayout x:Name="MainMenuLayout" Spacing="0">
                    <BoxView HeightRequest="10" BackgroundColor="Transparent"/>
                    <VerticalStackLayout Padding="20" Spacing="25">
                        <VerticalStackLayout x:Name="MenuButtonFrames" Spacing="18">
                            <Frame x:Name="FrameDescargarDatos" CornerRadius="14" Padding="0" HasShadow="True" BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnDescargarDatos" Text="   ⬇️                   Descargar Datos                         " Style="{StaticResource PrimaryButton}" Command="{Binding SincronizarCatalogosCommand}" HorizontalOptions="FillAndExpand"/>
                            </Frame>
                            <Frame x:Name="FrameSincronizarDatos" CornerRadius="14" Padding="0" HasShadow="True" BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnSincronizarDatos" Text="   🔄                   Sincronizar Datos                       " Style="{StaticResource PrimaryButton}" Command="{Binding SincronizarVentasCommand}" HorizontalOptions="FillAndExpand"/>
                            </Frame>
                            <Frame x:Name="FrameIniciar" CornerRadius="14" Padding="0" HasShadow="True" BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnIniciar" Text="   💰                   Iniciar                                            " Style="{StaticResource PrimaryButton}" Command="{Binding NavegarInicioCommand}" HorizontalOptions="FillAndExpand"/>
                            </Frame>
                            <Frame x:Name="FrameCerrarSesion" CornerRadius="14" Padding="0" HasShadow="True" BackgroundColor="{StaticResource Primary}">
                                <Button x:Name="BtnCerrarSesion" Text="   🔒                  Cerrar Sesión                               " Style="{StaticResource PrimaryButton}" Command="{Binding CerrarSesionCommand}" HorizontalOptions="FillAndExpand"/>
                            </Frame>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="30" BackgroundColor="Transparent"/>

                        <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                            <Label Text="Versión 1.0.0" TextColor="{StaticResource TextPrimaryBrush}" HorizontalOptions="Center"/>
                            <Label Text="© 2025 Borneo Soft" TextColor="{StaticResource TextPrimaryBrush}" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <AbsoluteLayout x:Name="LoadingOverlay" IsVisible="False" BackgroundColor="#80000000" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Frame Background="{StaticResource CardBackgroundBrush}" CornerRadius="20" Padding="30" HasShadow="True" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" Color="{StaticResource Primary}" WidthRequest="40" HeightRequest="40"/>
                    <Label x:Name="LoadingLabel" Text="Procesando..." TextColor="{StaticResource TextPrimaryBrush}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </AbsoluteLayout>
    </AbsoluteLayout>
</ContentPage>