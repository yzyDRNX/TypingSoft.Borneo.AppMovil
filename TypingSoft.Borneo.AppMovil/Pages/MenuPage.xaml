<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypingSoft.Borneo.AppMovil.Pages.MenuPage"
             BackgroundColor="White">

    <AbsoluteLayout>

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">

            <StackLayout Spacing="0">

                <!-- Header con información de unidad y fecha -->
                <Frame BackgroundColor="#1E1E1E" 
                       Padding="15" 
                       HasShadow="True" 
                       CornerRadius="0"
                       Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="📍 Unidad:" 
                               TextColor="White" 
                               Grid.Row="0" 
                               Grid.Column="0"
                               FontSize="14"
                               FontAttributes="Bold"
                               Margin="0,0,10,5"/>
                        <Label Text="{Binding DescripcionRuta}" 
                               TextColor="#E0E0E0" 
                               Grid.Row="0" 
                               Grid.Column="1"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                        <Label Text="📅 Fecha:" 
                               TextColor="White" 
                               Grid.Row="1" 
                               Grid.Column="0"
                               FontSize="14"
                               FontAttributes="Bold"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding FechaActual}" 
                               TextColor="#E0E0E0" 
                               Grid.Row="1" 
                               Grid.Column="1"
                               FontSize="14"
                               Margin="0"/>
                    </Grid>
                </Frame>

                <!-- Título principal -->
                <Frame BackgroundColor="#0A84FF" 
                       Padding="20" 
                       HasShadow="False" 
                       CornerRadius="0"
                       Margin="0">
                    <Label Text="INFORMACIÓN DE VENTA" 
                           TextColor="White" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Contenido principal -->
                <StackLayout Padding="20" Spacing="25">

                    <!-- Espacio decorativo -->
                    <BoxView HeightRequest="10" BackgroundColor="Transparent"/>

                    <!-- Título del menú -->
                    <StackLayout Spacing="10">
                        <Frame BackgroundColor="#2C2C2C" 
                               Padding="15" 
                               HasShadow="True" 
                               CornerRadius="12"
                               Margin="0,0,0,10">
                            <Label Text="🏠 Menú Principal" 
                                   TextColor="White"
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </Frame>
                    </StackLayout>

                    <!-- Botones del menú -->
                    <StackLayout Spacing="15">

                        <!-- Botón Sincronizar Base de Datos -->
                        <Frame CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BackgroundColor="#1E1E1E">
                            <Button Text="🔄 Sincronizar Base de Datos"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    HeightRequest="55"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"/>
                        </Frame>

                        <!-- Botón Bajar Base de Datos -->
                        <Frame CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BackgroundColor="#1E1E1E">
                            <Button Text="⬇️ Bajar Base de Datos"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    HeightRequest="55"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"/>
                        </Frame>

                        <!-- Botón Generar Venta -->
                        <Frame CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BackgroundColor="#0A84FF">
                            <Button Text="💰 Generar Venta"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    HeightRequest="55"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    Clicked="OnGenerarVentaClicked"
                                    HorizontalOptions="FillAndExpand"/>
                        </Frame>

                        <!-- Botón Inicio -->
                        <Frame CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BackgroundColor="#34C759">
                            <Button Text="🏡 Inicio"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    HeightRequest="55"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    Clicked="OnEmpeladoClicked"
                                    HorizontalOptions="FillAndExpand"/>
                        </Frame>

                    </StackLayout>

                    <!-- Espacio adicional -->
                    <BoxView HeightRequest="30" BackgroundColor="Transparent"/>

                </StackLayout>

                <!-- Footer -->
                <BoxView BackgroundColor="#0A84FF" HeightRequest="60"/>

            </StackLayout>
        </ScrollView>

        <!-- Modal de carga (opcional para futuras operaciones) -->
        <AbsoluteLayout x:Name="LoadingOverlay"
                        IsVisible="False"
                        BackgroundColor="#80000000"
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">

            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="True"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                   AbsoluteLayout.LayoutFlags="PositionProportional">

                <StackLayout Spacing="15" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       Color="#0A84FF"
                                       WidthRequest="40"
                                       HeightRequest="40"/>
                    <Label x:Name="LoadingLabel"
                           Text="Procesando..."
                           FontSize="16"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </AbsoluteLayout>

    </AbsoluteLayout>
</ContentPage>