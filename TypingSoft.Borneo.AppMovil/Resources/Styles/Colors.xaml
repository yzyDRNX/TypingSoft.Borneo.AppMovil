<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Fondos -->
    <Color x:Key="Primary">#696969</Color>     <!-- DimGray -->
    <Color x:Key="Secondary">#696969</Color>   <!-- DimGray -->

    <!-- Texto -->
    <Color x:Key="White">White</Color>

    <!-- Bordes -->
    <Color x:Key="CardBorder">#808080</Color>  <!-- Gris medio -->

    <!-- Brushes base -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>

    <!-- Aplicación global -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#696969"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#696969"/>
    <SolidColorBrush x:Key="CardBorderBrush"     Color="{StaticResource CardBorder}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush"    Color="{StaticResource White}"/>
</ResourceDictionary>