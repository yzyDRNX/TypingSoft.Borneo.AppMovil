<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

 

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource White}" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource CardBorderBrush}" />
        <Setter Property="StrokeShape" Value="Rectangle"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBorderBrush}" />
    </Style>

    <!-- Botones -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="MinimumHeightRequest" Value="56"/>
        <Setter Property="MinimumWidthRequest" Value="56"/>
    </Style>

    <!-- Controles de entrada -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="MinimumHeightRequest" Value="56"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="Entry" TargetType="Entry">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="18" />
        <Setter Property="MinimumHeightRequest" Value="56"/>
        <Setter Property="MinimumWidthRequest" Value="56"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorderBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
    </Style>

    <!-- Texto por defecto -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{StaticResource CardBorderBrush}" />
        <Setter Property="RefreshControlColor" Value="White" />
    </Style>

    <Style x:Key="Picker" TargetType="Picker">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="TitleColor" Value="#B0B0B0" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="PlaceholderColor" Value="#B0B0B0" />
        <Setter Property="CancelButtonColor" Value="#B0B0B0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="MinimumHeightRequest" Value="56"/>
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="White" />
        <Setter Property="ThumbColor" Value="White" />
    </Style>

    <!-- Fondo global páginas -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{StaticResource PageBackgroundBrush}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="#696969" />
        <Setter Property="BarTextColor" Value="White" />
        <Setter Property="IconColor" Value="White" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="#696969" />
        <Setter Property="BarTextColor" Value="White" />
        <Setter Property="UnselectedTabColor" Value="#9AA0A6" />
        <Setter Property="SelectedTabColor" Value="White" />
    </Style>

    <!-- Botón primario -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource PrimaryBrush}" Opacity="0.3" Radius="10" Offset="2,2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Padding" Value="20,12" />
    </Style>

    <!-- Títulos -->
    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

</ResourceDictionary>
